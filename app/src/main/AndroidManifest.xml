<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NippoProjeto"
        tools:targetApi="31">
        <activity
            android:name=".AberturaActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CadastroActivity"
            android:label="cadastro_tela">
        </activity>
        <activity android:name=".PerfilActivity"
            android:label="perfil_tela">
        </activity>
        <activity android:name=".MainActivity"
            android:label="login_tela">
        </activity>

        <activity android:name=".LoginActivity"
            android:label="abertura_tela">
        </activity>

    </application>

</manifest>